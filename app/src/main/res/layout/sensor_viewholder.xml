<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="sensor_view_model"
            type="pl.wojtach.malinka.ui.SensorViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_green_light"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/sensor_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="21dp"
            android:text="@{sensor_view_model.name}"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/sensor_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="21dp"
            android:checked="@={sensor_view_model.isActiveObservable}"
            android:onClick="@{view -> sensor_view_model.setNewStatus()}"
            android:visibility="@{sensor_view_model.errorOccuredObservable ? View.INVISIBLE : View.VISIBLE}" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="21dp"
            android:background="@android:color/holo_red_light"
            android:text="@string/error_sensor_view_holder"
            android:visibility="@{sensor_view_model.errorOccuredObservable ? View.VISIBLE : View.GONE}" />

        <TextView
            android:id="@+id/date_descr"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/sensor_switch"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="21dp"
            android:text="@string/sensor_date_descr" />

        <TextView
            android:id="@+id/date_field"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/date_descr"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/sensor_switch"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="21dp"
            android:text="@{sensor_view_model.date}" />

        <TextView
            android:id="@+id/sensor_value_descr"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/date_field"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="21dp"
            android:text="@string/sensor_value_descr" />

        <TextView
            android:id="@+id/sensor_value"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/sensor_value_descr"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/date_field"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="21dp"
            android:text="@{sensor_view_model.value}" />

    </RelativeLayout>

</layout>