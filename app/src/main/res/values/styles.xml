<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Table" parent="AppTheme">
        <item name="android:padding">10dp</item>
    </style>

    <style name="TableTitle" parent="Table">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sensor_viewholder">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">21dp</item>
    </style>

    <style name="sensor_viewholder_left" parent="sensor_viewholder">

        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:layout_marginStart">26dp</item>

    </style>

    <style name="sensor_viewholder_right" parent="sensor_viewholder">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:layout_marginEnd">26dp</item>
    </style>

</resources>
